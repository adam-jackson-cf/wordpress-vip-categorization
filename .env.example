# Supabase Configuration
# Get service_role key from: Settings -> API in your Supabase dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# OpenRouter Configuration (OpenAI-compatible API)
# Sign up at: https://openrouter.ai
OPENAI_API_KEY=sk-or-v1-your-openrouter-key
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Models - Using free/low-cost options
# Chat model for categorization (free tier)
OPENAI_MODEL=google/gemini-2.0-flash-exp:free
# Embedding model for semantic matching (low cost)
OPENAI_EMBEDDING_MODEL=qwen/qwen3-embedding-0.6b
OPENAI_BATCH_TIMEOUT=86400

# WordPress VIP Configuration
# Comma-separated list of WordPress sites to ingest
WORDPRESS_VIP_SITES=https://wordpress.org/news
WORDPRESS_VIP_AUTH_TOKEN=

# Application Configuration
TAXONOMY_FILE_PATH=./data/taxonomy.csv
BATCH_SIZE=100
LOG_LEVEL=INFO
SIMILARITY_THRESHOLD=0.70

# DSPy Configuration
DSPY_OPTIMIZATION_METRIC=accuracy
DSPY_NUM_TRIALS=20

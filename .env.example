# Supabase Configuration
# Get service_role key from: Settings -> API in your Supabase dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# Semantic Matching (Embeddings) API
# Typically OpenRouter/OpenAI-compatible embeddings endpoint
SEMANTIC_API_KEY=sk-semantic-key
SEMANTIC_BASE_URL=https://openrouter.ai/api/v1
# Embedding model for semantic matching (low cost)
SEMANTIC_EMBEDDING_MODEL=qwen/qwen3-embedding-0.6b

# LLM Categorization API (chat completions)
LLM_API_KEY=sk-llm-key
LLM_BASE_URL=https://openrouter.ai/api/v1
# Chat model for categorization (free tier)
LLM_MODEL=google/gemini-2.0-flash-exp:free
LLM_BATCH_TIMEOUT=86400

# WordPress VIP Configuration
# Comma-separated list of WordPress sites to ingest
WORDPRESS_VIP_SITES=https://wordpress.org/news
WORDPRESS_VIP_AUTH_TOKEN=

# Application Configuration
TAXONOMY_FILE_PATH=./data/taxonomy.csv
BATCH_SIZE=100
LOG_LEVEL=INFO

# Matching Configuration
# Semantic matching threshold (0-1) - items above this are matched
SIMILARITY_THRESHOLD=0.85
# LLM confidence threshold (0-1) - items above this in LLM stage are matched
LLM_CONFIDENCE_THRESHOLD=0.9
# Enable/disable matching stages (true/false)
ENABLE_SEMANTIC_MATCHING=true
ENABLE_LLM_CATEGORIZATION=true

# DSPy Configuration
DSPY_OPTIMIZATION_METRIC=accuracy
DSPY_NUM_TRIALS=20

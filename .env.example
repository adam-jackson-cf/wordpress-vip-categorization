# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_BATCH_TIMEOUT=86400

# WordPress VIP Configuration
# Comma-separated list of WordPress sites to ingest
WORDPRESS_VIP_SITES=https://site1.com,https://site2.com
WORDPRESS_VIP_AUTH_TOKEN=

# Application Configuration
TAXONOMY_FILE_PATH=./data/taxonomy.csv
BATCH_SIZE=1000
LOG_LEVEL=INFO
SIMILARITY_THRESHOLD=0.75

# DSPy Configuration
DSPY_OPTIMIZATION_METRIC=accuracy
DSPY_NUM_TRIALS=50
